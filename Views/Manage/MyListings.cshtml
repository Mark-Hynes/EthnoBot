@model IEnumerable<EthnoBot.Models.ListingViewModel>
@{
    ViewBag.Title = "MyListings";
}


<br />
<br />
<nav class="nav nav-tabs nav-fill">
    <a class="nav-item nav-link text-success " href="@Url.Action("SellerIndex", "Manage")"><h3><span class="glyphicon glyphicon-home"></span> Profile Details</h3></a>
    <a class="nav-item nav-link text-danger active" href="#"><h3><span class="glyphicon glyphicon-leaf"></span> My Listings</h3></a>
    <a class="nav-item nav-link text-info" href="@Url.Action("MyOrders", "Manage")"><h3><span class="glyphicon glyphicon-th-list"></span> Pending Orders</h3></a>
    <a class="nav-item nav-link text-muted" href="#"><h3><span class="glyphicon glyphicon-envelope"></span> Messages</h3> </a>
</nav>



    <div class="row">
        <div class="col">
            <h3 class="text-muted text-center">Product Listings</h3>

        </div>
    </div>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6 border">
                <div class="row border" >
                    <div class="col-3"></div>
                    <div class="col-6"><h4 class="text-center text-secondary">@item.Product.Title</h4></div>
                    <div class="col-3">@Html.ActionLink("Add offer", "ProductAndListings", "Search", "a2e5c227-eb96-4873-bd59-093ccd6a2acc", new { @class = "btn btn-info  float-right" })</div>
                
                </div>
         
                        <div  style="height:150px;overflow-y: scroll;">
                            @foreach (var offer in item.Offers)
                            {
                                <div class="row">
                                    <div class="col-4 border text-center">@offer.Price @offer.Currency</div>
                                    <div class="col-4 border text-center">@offer.Units @offer.Measurement</div>
                                    <div class="col-4 border">
                                        @Html.ActionLink("Modify", "ProductAndListings", "Search", "a2e5c227-eb96-4873-bd59-093ccd6a2acc", new { @class = "btn btn-info float-left" })
                                        @Html.ActionLink("Remove", "ProductAndListings", "Search", "a2e5c227-eb96-4873-bd59-093ccd6a2acc", new { @class = "btn btn-danger float-right" })
                                    </div>


                                </div>
                            }

                        </div>
                    </div>
                    <hr />
                    }



                </div>
    @Html.ActionLink("Add new Listing", "AddListing", null, new { @class = "btn btn-info float-left" })







