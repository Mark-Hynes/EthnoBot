@model EthnoBot.Models.SearchResultsViewModel

@if(Model.products.Count>=1){
foreach (var item in Model.products)
{
<div class="col-sm-6 item">
    <div class="row">
        <div class="col-md-12 col-lg-5"><a href="#"><img src="@item.ImagePath"  style="width:220px;height:160px;"/></a></div>
        <div class="col align-content-end">
            <h3 class="name">@item.Title</h3>
            <p ><i>@item.Abstract</i></p>
            <p class="description">@item.Description</p>
            <div class="row">
                <div class="col align-items-end"><a class="btn btn-primary btn-block" href="/Search/ProductAndListings/@item.ProductId">View Product</a></div>
            </div>
        </div>
    </div>
</div>
      
}
}
else {<h3 class="text-success">No results found, try refining your search</h3>}