@model IEnumerable<EthnoBot.Models.Category>

@{
    /**/

    ViewBag.Title = "Products";
    string imagePath = (string)ViewData["ImagePath"];
    int rowcount = 0;
}



<div >
    <h2>Product Categories</h2>
    <div class="container">
        <div class="card-deck">
            @foreach (var item in Model)
            {
            <row>
                <div class="card border-success mb-4">
                    <img class="card-img-top img-fluid" src="@Url.Content("~/Images/Categories/" + @item.ImagePath)" alt="Card image cap" style="width:300px;height:180px">
                    <div class="card-body ">
                        <h5 class="card-title text-success">@item.Name</h5>
                        <p class="card-text text-success" style="width:250px;height:50px" >@item.Description</p>
                    </div>
                    <div class="card-body">
                        @Html.ActionLink("View Items", "ListProducts", new { id = item.CategoryId }, new { @class = "btn btn-outline-success btn-lg", @role = "button" })
                    </div>
                </div>
            </row>
              
                rowcount++;
            }


        </div>

    </div>

