@model IEnumerable<EthnoBot.Models.Product>

@{
    ViewBag.Title = "ListProducts";
}

<h2>ListProducts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LatinName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemArtURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LatinName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemArtURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Family)
        </td>
        <td>
            @Html.ActionLink("Details", "ProductAndListings", new { id=item.ProductId }) |
            </td>
    </tr>
}

</table>
