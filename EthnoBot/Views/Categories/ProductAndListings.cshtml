@model EthnoBot.Models.ProductAndListingsModel
@using EthnoBot.Models;
@{
    ViewBag.Title = Model.product.Title;
}
@{

    var prod = Model.product;
    var listings = Model.listings;
    int i = 0;
}
<!-- Stack the columns on mobile by making one full-width and the other half-width -->
@Html.ActionLink("<-- Back to " + Model.category.Name, "ListProducts", new { id = Model.category.CategoryId }, new { @class = "text-info" })

<br />
<div class="container">
    <div class="row">
        <div class="col-6 col-md-4">
            <img class="card-img-top img-fluid" src="@Url.Content("~/Images/Products/" + Model.product.ImagePath)" alt="Card image cap" style="width:300px;height:180px">
        </div>
        <div class="col-6 col-md-4">
            <h2 class="text-info">@prod.Title</h2>

            <h3 class="text-info">Family: @prod.Family</h3>
            <h3 class="text-info">Latin Name: @prod.LatinName</h3>
        </div>
    </div>


    <h2 class="text-info">Producers who sell this product:</h2>

    <div class="list-group text-info">
        @foreach (var item in listings)
        {


            <li class="list-group-item">
                <h5 class=" text-info">@Html.ActionLink(item.Producer.Name, "ProducerAndListings", new { id = item.Producer.ProducerId }, new { @class = "text-info", })<span href="#" class="badge badge-pill badge-light">@Html.ActionLink("$" + @item.Price + " per 1kg", "Index", new { @class = "btn btn-outline-info", @role = "button" })</span></h5>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" onclick="showPopup('@item.Producer.ProducerId','@item.Producer.Name','@item.Price','@item.Product.ProductId','@item.Product.Title')" data-target="#Modal">
                    Add to Cart
                </button>

            </li>

        }
        <!-- Modal -->
        <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add selected items to cart</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p id="Modal-ProductID"></p>
                        <p id="Modal-Product"></p>
                        <p id="Modal-Producer"></p>
                        <p id="Modal-Price"></p>
                        <div class="input-group mb-3">
                            <input type="number" id="KGUnits" class="form-control" min="1" max="100" placeholder="1" aria-label="KGUnits" aria-describedby="basic-addon2" required>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"> kgs</span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" id="addToCart1" class="btn btn-secondary">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>

    </div>






    <script type="text/javascript">
    var producerID = "";
    var productID = "";
    var unitPrice = "";
    var quantity = "";
    function showPopup(producerId, producerName, price, productId,productName) {
        document.getElementById("Modal-Producer").innerText = "Product Name: " + productName;
        document.getElementById("Modal-Producer").innerText = "Seller Name: " + producerName;


        document.getElementById("Modal-Price").innerText = "Price per 1kg: " + price;
        productID = productId;
        producerID = producerId;
        unitPrice = price;

    }

    (function () {
        document.getElementById("addToCart1").onclick = function () {
            quantity = document.getElementById("KGUnits").value
          
            location.href = '@Url.Action("AddToBasket", "Categories")?producerId=' + producerID + '&productId=' + productID + '&quantity=' + quantity + '&unitPrice=' + unitPrice;

        };
    })();
    </script>
