@model IEnumerable<EthnoBot.Models.ProducerProduct>
@using EthnoBot.Models;
@{
    ViewBag.Title = "ProductAndListings";
}
@{
    var prod = (Product)ViewData["ProdObj"];
    var listings = (List<ListingInfo>)ViewData["listings"];
}
<h2>@prod.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProducerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in listings) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem =>item.ProducerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProducerAddress)
        </td>
        <td>
            @Html.ActionLink("Buy!", "Edit", new { id=item.ProducerMobile }) |


        </td>
    </tr>
}

</table>
