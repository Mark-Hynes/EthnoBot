@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

 

<ul class="nav navbar-nav navbar-right">
    <li class="nav-item text-success">
        <a class="text-success" href="@Url.Action("Index", "Cart")">
            <span class="glyphicon glyphicon-shopping-cart text-success"></span>
            @Session["CartItemCount"]
        </a>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-success" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            @Html.ActionLink("Manage Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "dropdown-item text-success" })
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>


        </div>
    </li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
     
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" , @class = "btn btn-success" })</li>
    </ul>
}
